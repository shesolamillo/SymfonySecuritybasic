{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
<div class="profile-page">
    <div class="profile-card">
       <div class="profile-header">
    <img 
        src="{{ user.profilePicture ? asset('uploads/profile/' ~ user.profilePicture) : asset('images/user-icon.png') }}" 
        alt="User Avatar" 
        class="profile-avatar"
    >
    <h2>{{ user.username }}</h2>
</div>


        <div class="profile-edit">
    <h3>Edit User</h3>

    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
        {{ form_row(form.username) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.password) }}
        {{ form_row(form.profilePicture) }}

        <label for="note">Session Note</label>
        <textarea name="note" id="note" rows="3">{{ note ?: '' }}</textarea>

        <button type="submit">Update</button>
    {{ form_end(form) }}
</div>


        <div class="profile-actions">
            <a href="{{ path('app_user_index') }}" class="btn back-btn">⬅️ Back to List</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
