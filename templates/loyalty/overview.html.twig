{% extends 'base.html.twig' %}

{% block title %}Loyalty Dashboard{% endblock %}

{% block body %}

<h2 class="mb-4">ğŸ Loyalty Program</h2>

<!-- ===================== STATS CARDS ===================== -->
<div class="row mb-4">

    <div class="col-md-3">
        <div class="card shadow-sm p-3">
            <h6>Total Members</h6>
            <h1>{{ totalMembers }}</h1>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3">
            <h6>Total Points Awarded</h6>
            <h1>{{ totalPoints }}</h1>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3">
            <h6>Rewards Redeemed</h6>
            <h1>{{ redeemed }}</h1>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm p-3">
            <h6>Active Tiers</h6>
            <h1>{{ activeTiers }}</h1>
        </div>
    </div>

</div>


<!-- ===================== MEMBERS TABLE ===================== -->
<div class="card p-4 shadow-sm mb-5">

    <div class="d-flex justify-content-between mb-3">
        <h4>ğŸ‰ Loyalty Members</h4>
        <a href="{{ path('app_loyalty_new') }}" class="btn btn-primary">+ Add Member</a>
    </div>

    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Tier</th>
                <th>Points</th>
                <th>Joined</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
        {% for l in loyalties %}
            <tr>
                <td>#{{ l.id }}</td>
                <td>{{ l.user.username }}</td>
                <td>{{ l.user.email }}</td>

                <td>
                    <span class="badge bg-info text-dark">{{ l.rewardType|capitalize }}</span>
                </td>

                <td>
                    <span class="text-success fw-bold">â­ {{ l.points }}</span>
                </td>

                <td>{{ l.createdAt|date('M d, Y') }}</td>

                <td>
                    <a href="{{ path('app_loyalty_edit', {'id': l.id}) }}" class="btn btn-sm btn-warning">âœ</a>
                    <a href="{{ path('app_loyalty_show', {'id': l.id}) }}" class="btn btn-sm btn-info">ğŸ‘</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>


<!-- ===================== RECENT ACTIVITY ===================== -->
<div class="card p-4 shadow-sm">

    <h4>ğŸ“Š Recent Points Activity</h4>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
        <tr>
            <th>Member</th>
            <th>Action</th>
            <th>Points</th>
            <th>Date</th>
        </tr>
        </thead>

        <tbody>
        {% for l in loyalties %}
        <tr>
            <td>{{ l.user.username }}</td>

            <td>
                {% if l.points > 0 %}
                    <span class="badge bg-success">Added</span>
                {% else %}
                    <span class="badge bg-danger">Redeemed</span>
                {% endif %}
            </td>

            <td>{{ l.points }}</td>

            <td>{{ l.createdAt|date('M d, Y H:i') }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

</div>

{% endblock %}
