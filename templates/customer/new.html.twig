{% extends 'base.html.twig' %}

{% block title %}Add New Customer{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/customer_new.css') }}">
{% endblock %}

{% block body %}
<div class="customer-container">
    <div class="form-card">
        <h1 class="title">ðŸ§¾ Add New Customer</h1>
        <p class="subtitle">Fill out the form below to register a new customer.</p>

        {{ form_start(form, {'attr': {'class': 'customer-form'}}) }}
            <div class="form-grid">
                <div class="form-group">
                    {{ form_label(form.firstName, 'First Name') }}
                    {{ form_widget(form.firstName, {'attr': {'class': 'input-field'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.lastName, 'Last Name') }}
                    {{ form_widget(form.lastName, {'attr': {'class': 'input-field'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email, 'Email Address') }}
                    {{ form_widget(form.email, {'attr': {'class': 'input-field'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.phone, 'Phone Number') }}
                    {{ form_widget(form.phone, {'attr': {'class': 'input-field'}}) }}
                </div>
            </div>

            <div class="form-buttons">
                <button class="btn save-btn">{{ button_label|default('Save Customer') }}</button>
                <a href="{{ path('app_customer_index') }}" class="btn cancel-btn">Back to List</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
