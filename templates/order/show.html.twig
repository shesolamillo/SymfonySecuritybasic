{% extends 'base.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/order_show.css') }}">
{% endblock %}

{% block body %}
<div class="details-card" style="max-width:500px; margin:40px auto; padding:25px; border-radius:12px; background:#fff; box-shadow:0 4px 15px rgba(0,0,0,0.1);">

    <h2 style="margin-bottom:20px;">Order Details</h2>

    <div class="row" style="display:flex; justify-content:space-between; padding:8px 0;">
        <span>Order ID:</span> 
        <strong>{{ order.id }}</strong>
    </div>

    <div class="row" style="display:flex; justify-content:space-between; padding:8px 0;">
        <span>Customer:</span> 
        <strong>
            {{ order.user ? order.user.username : 'N/A' }}
        </strong>
    </div>


    <div class="row" style="display:flex; justify-content:space-between; padding:8px 0;">
        <span>Date:</span> 
        <strong>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '' }}</strong>
    </div>

    <div class="row" style="display:flex; justify-content:space-between; padding:8px 0;">
        <span>Status:</span> 
        <span class="badge" style="padding:5px 10px; border-radius:5px; background:#007bff; color:white;">
            {{ order.status }}
        </span>
    </div>

    <div class="row" style="display:flex; justify-content:space-between; padding:8px 0;">
        <span>Total:</span> 
        <strong>â‚±{{ total }}</strong>

    </div>

    <div style="margin-top:25px; display:flex; gap:10px;">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">Back</a>
        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('order/_delete_form.html.twig') }}
    </div>

</div>
<script>

function closeDetails() {
    document.getElementById('detailsModal').style.display = 'none';
}
</script>
{% endblock %}
